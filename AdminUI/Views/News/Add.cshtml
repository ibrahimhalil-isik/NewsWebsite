@using AdminUI.Models
@model NewsViewModel

<div class="container">
    <div class="page-title">
        <h3>Haber İşlemleri</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">Haber Ekle</div>
                <div class="card-body">
                    <p class="card-title">Haber ekleme işlemi yapabilirsiniz.</p>

                    @using (Html.BeginForm("AddNews", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(x => x.ClicksNumber, new { value = "0" })
                        <div class="mb-3">
                            <label for="email" class="form-label">Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { placeholder = "Başlık", @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">İçerik</label>
                            @Html.TextAreaFor(x => x.Contents, new { placeholder = "İçerik", @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Resim</label>
                            @Html.TextBoxFor(x => x.ImageFile, new { type = "file", @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Video</label>
                            @Html.TextBoxFor(x => x.VideoFile, new { type = "file", @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, Model.Category, new { placeholder = "Kategori Seçiniz", @class = "form-select" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Yazar</label>
                            @Html.DropDownListFor(x => x.WriterId, Model.Writer, new { placeholder = "Yazar Seçiniz", @class = "form-select" })
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Statü</label>
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(x => x.NewsStatus, new { @class = "form-check-input" })
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>