@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

﻿@using Shared.Dtos
@model List<NewsDto>

<div class="container">
    <div class="page-title">
        <h3>Haber İşlemleri</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9" style="line-height:50px;">Haberler</div>
                        <div class="col-3"><a href="/Haber/Ekle" style="float:right;color: white;background-color:green;" class="btn float-right m-2"><i class="fa fa-plus"></i></a></div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-title">Haberler ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Veri Sayısı : @Model.Where(x => x.NewsStatus == true).Count()</p>
                    <table class="table table-hover" id="dataTables-example" width="100%">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>EklenmeTarihi</th>
                                <th>Yazar</th>
                                <th>Kategori</th>
                                <th>Gösterim</th>
                                <th>Durum</th>
                                <th style="min-width:110px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.NewsId</td>
                                    <td>@item.Title</td>
                                    <td>@item.NewsDate</td>
                                    <td>@item.WriterId</td>
                                    <td>@item.CategoryId</td>
                                    <td>@item.ClicksNumber</td>
                                    <td>
                                        @if (item.NewsStatus)
                                        {
                                            <span class="badge bg-info">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Haber/Guncelle?haberId=@item.NewsId" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
                                        <a href="/Haber/Sil?haberId=@item.NewsId" class="btn btn-danger mb-2" style="width: 44px;"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>