@using AdminUI.Models
@model WriterViewModel

<div class="container">
	<div class="page-title">
		<h3>Yazar İşlemleri</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Yazar Ekle</div>
				<div class="card-body">
					<p class="card-title">Yazar ekleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						<div class="mb-3">
							<label for="email" class="form-label">Ad</label>
							@Html.TextBoxFor(x => x.Name, new { placeholder = "Ad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Soyad</label>
							@Html.TextBoxFor(x => x.SurName, new { placeholder = "Soyad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">E-Posta</label>
							@Html.TextBoxFor(x => x.Email, new { placeholder = "E-Posta", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Şifre</label>
							@Html.TextBoxFor(x => x.Password, new { placeholder = "Şifre", type = "password", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Resim</label>
							@Html.TextBoxFor(x => x.ImageFile, new { type = "file", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.WriterStatus, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-primary">Ekle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>