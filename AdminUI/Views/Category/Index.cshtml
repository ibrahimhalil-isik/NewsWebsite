@{
}
@using Shared.Dtos
@model List<CategoryDto>

<div class="container">
	<div class="page-title">
		<h3>Kategori İşlemleri</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col-9" style="line-height:50px;">Kategoriler</div>
						<div class="col-3"><a href="/Category/Add" style="float:right;color: white;background-color:green;" class="btn float-right m-2"><i class="fa fa-plus"></i></a></div>
					</div>
				</div>
				<div class="card-body">
					<p class="card-title">Kategoriler ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Veri Sayısı : @Model.Where(x => x.CategoryStatus == true).Count()</p>
					<table class="table table-hover" id="dataTables-example" width="100%">
						<thead>
							<tr>
								<th>Açıklaması</th>
								<th>Durum</th>
								<th style="min-width:110px;">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.CategoryName</td>
									<td>
										@if (item.CategoryStatus)
										{
											<span class="badge bg-info">Aktif</span>
										}
										else
										{
											<span class="badge bg-danger">Pasif</span>
										}
									</td>
									<td>
										<a href="/Category/Update?id=@item.CategoryId" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
										<a href="/Category/Delete?id=@item.CategoryId" class="btn btn-danger mb-2" style="width: 44px;"><i class="fa fa-times"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>