@{
}
@using AdminUI.Models
@model CategoryViewModel
<div class="container">
	<div class="page-title">
		<h3>Kategori İşlemleri</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Kategori Ekle</div>
				<div class="card-body">
					<p class="card-title">Kategoriler ekleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
					{
						<div class="mb-3">
							<label for="email" class="form-label">Kategori Açıklaması</label>
							@Html.TextBoxFor(x => x.CategoryName, new { placeholder = "Açıklama", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.CategoryStatus, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-primary">Ekle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>