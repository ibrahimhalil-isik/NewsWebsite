@using AdminUI.Models
@model CommentViewModel

<div class="container">
	<div class="page-title">
		<h3>Yorum İşlemleri</h3>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header">Yorum Ekle</div>
				<div class="card-body">
					<p class="card-title">Yorum ekleme işlemi yapabilirsiniz.</p>

					@using (Html.BeginForm("AddComment", "Comment", FormMethod.Post))
					{
						<div class="mb-3">
							<label for="email" class="form-label">Ad</label>
							@Html.TextBoxFor(x => x.Name, new { placeholder = "Ad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Soyad</label>
							@Html.TextBoxFor(x => x.Surname, new { placeholder = "Soyad", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">E-Posta</label>
							@Html.TextBoxFor(x => x.Email, new { placeholder = "E-Posta", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Başlık</label>
							@Html.TextBoxFor(x => x.CommentTitle, new { placeholder = "Başlık", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">İçerik</label>
							@Html.TextBoxFor(x => x.CommentText, new { placeholder = "İçerik", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Haber Id</label>
							@Html.TextBoxFor(x => x.NewsId, new { placeholder = "Haber Id", @class = "form-control" })
						</div>
						<div class="mb-3">
							<label for="email" class="form-label">Statü</label>
							<div class="form-check form-switch">
								@Html.CheckBoxFor(x => x.CommentStatus, new { @class = "form-check-input" })
							</div>
						</div>
						<br />
						<button type="submit" class="btn btn-primary">Ekle</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>