@using Shared.Dtos
@model List<CommentDto	>

<div class="container">
    <div class="page-title">
        <h3>Yorum İşlemleri</h3>
    </div>
    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9" style="line-height:50px;">Yorumlar</div>
                        <div class="col-3"><a href="/Comment/Add" style="float:right;color: white;background-color:green;" class="btn float-right m-2"><i class="fa fa-plus"></i></a></div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-title">Yorumlar ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Veri Sayısı : @Model.Where(x => x.CommentStatus == true).Count()</p>
                    <table class="table table-hover" id="dataTables-example" width="100%">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Eposta</th>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Haber</th>
                                <th>Eklenme Tarihi</th>
                                <th>Durum</th>
                                <th style="min-width:110px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.CommentTitle</td>
                                    <td>@item.CommentText</td>
                                    <td>@item.NewsTitle</td>
                                    <td>@item.CommentDate</td>
                                    <td>
                                        @if (item.CommentStatus)
                                        {
                                            <span class="badge bg-info">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Comment/Update?id=@item.CommentId" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
                                        <a href="/Comment/Delete?id=@item.CommentId" class="btn btn-danger mb-2" style="width: 44px;"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>